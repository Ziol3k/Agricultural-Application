<!-- views/admin/machines.ejs -->
<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>

<body>
  <div class="background-wrapper">
    <div class="overlay"></div>
    
    <div class="wrapper">
      <header>
        <h1>Zarządzanie Maszynami</h1>
        <a href="/admin/machines/new" class="btn">Dodaj Nową Maszynę</a>
      </header>

      <table class="machines-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Obraz</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
          <% machines.forEach(machine => { %>
            <tr>
              <td><%= machine.id %></td>
              <td><%= machine.name %></td>
              <td><%= machine.description %></td>
              <td><img src="<%= machine.image_url %>" alt="<%= machine.name %>" width="100"></td>
              <td>
                <a href="/admin/machines/edit/<%= machine.id %>">Edytuj</a>
                <form action="/admin/machines/delete/<%= machine.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn-delete">Usuń</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
